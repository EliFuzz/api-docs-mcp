{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "replacers": {
      "pathStringifier": "../$1.js"
    }
  }
}
